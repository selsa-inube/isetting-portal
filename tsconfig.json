{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": true,
      "checkJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@design/*": ["./src/design/*"],
        "@components/*": ["./src/components/*"],
        "@routes/*": ["./src/routes/*"],
        "@utils/*": ["./src/utils/*"],
        "@validations/*": ["./src/validations/*"],
        "@assets/*": ["./src/assets/*"],
        "@styles/*": ["./src/styles/*"],
        "@content/*": ["./src/content/*"],
        "@context/*": ["./src/context/*"],
        "@config/*": ["./src/config/*"],
        "@pages/*": ["./src/pages/*"],
        "@hooks/*": ["./src/hooks/*"],
        "@mocks/*": ["./src/mocks/*"],
        "@ptypes/*": ["./src/types/*"],
        "@forms/*": ["./src/shared/forms/*"]
      },
      "types": ["vite/client"]
    },
  
    "include": ["src", "./manifest.d.ts", "vite-env.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }